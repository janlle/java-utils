<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="cn.jja.entity.User" table="book">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="username" column="username" length="50" type="string"/>
        <property name="password" column="password" length="20" type="string"/>
        <property name="gender" column="gender" length="20" type="string"/>
    </class>
</hibernate-mapping>